<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".acticity_register">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Create New Account"
        android:textColor="#fff" />
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/essam"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>
    <EditText
        android:id="@+id/et_name_rg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="15dp"
        android:hint="Name"
        android:gravity="left"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/input_background"
        android:textColor="#000" />
    <EditText
        android:id="@+id/et_email_rg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:layout_below="@+id/et_name_rg"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:gravity="left"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/input_background"
        android:textColor="#000" />

    <EditText
        android:id="@+id/et_passWord_rg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:gravity="left"
        android:padding="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/input_background"
        android:layout_below="@+id/et_email_rg"
        android:textColor="#000" />
    <Button
        android:id="@+id/bt_register_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Create New Account"
        android:background="@drawable/input_background"
        android:layout_below="@+id/et_passWord_rg"
        />
    <Button
        android:id="@+id/bt_backToLogIn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:text="Log In  "
        android:background="@drawable/background"
        android:layout_below="@+id/bt_register_rg"/>

    <ProgressBar
        android:id="@+id/pB_progressBar"
       android:visibility="invisible"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:indeterminate="true"
        />

</RelativeLayout>